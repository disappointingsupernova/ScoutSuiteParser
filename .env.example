# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=scoutsuite_user
DB_PASSWORD=your_password
DB_NAME=scoutsuite_db

# TLS/SSL Configuration
DB_SSL_DISABLED=false
# DB_SSL_CA=/path/to/ca-cert.pem
# DB_SSL_CERT=/path/to/client-cert.pem
# DB_SSL_KEY=/path/to/client-key.pem

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=alerts@yourcompany.com
SMTP_USE_TLS=true

# AWS SES Configuration (alternative to SMTP)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# Email Recipients (comma-separated)
EMAIL_RECIPIENTS=security@yourcompany.com,admin@yourcompany.com

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
NOTIFY_ON_NEW_FINDINGS=true
NOTIFY_ON_SEVERITY=medium,high,critical
INITIAL_SCAN=false